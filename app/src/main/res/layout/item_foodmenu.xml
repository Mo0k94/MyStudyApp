<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="15dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/date_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="30일"
                    android:textColor="@color/colorControlHighlight2"
                    android:textSize="20sp"
                    android:textStyle="bold" />

            <TextView
                android:id="@+id/day_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ripple_food"
                android:text="목"
                android:layout_gravity="center"
                android:textColor="#fff"
                android:textSize="24sp"
                android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:weightSum="30"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="10"
                    android:weightSum="1"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/rice_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="흰쌀밥"
                        android:layout_weight="0.5"
                        android:gravity="start"
                        android:layout_gravity="center"
                        android:textStyle="bold"
                        android:textSize="14sp" />


                    <TextView
                        android:id="@+id/ban4_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:text="배추김치"
                        android:gravity="end"
                        android:textStyle="bold"
                        android:textSize="14sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="10"
                    android:layout_marginTop="7dp"
                    android:weightSum="1"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/soup_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="우거지국"
                        android:layout_weight="0.5"
                        android:gravity="start"
                        android:textStyle="bold"
                        android:textSize="14sp" />


                    <TextView
                        android:id="@+id/ban2_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:text="감자햄볶음"
                        android:gravity="end"
                        android:layout_gravity="center"
                        android:textStyle="bold"
                        android:textSize="14sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="10"
                    android:layout_marginTop="7dp"
                    android:weightSum="1"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/ban1_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="가나다라"
                        android:textStyle="bold"
                        android:gravity="start"
                        android:layout_weight="0.45"
                        android:textSize="14sp" />


                    <TextView
                        android:id="@+id/ban3_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.55"
                        android:text="부추전"
                        android:gravity="end"
                        android:layout_gravity="center"
                        android:textStyle="bold"
                        android:textSize="14sp" />

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
</android.support.v7.widget.CardView>